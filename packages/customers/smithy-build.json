{
  "version": "2.0",
  "sources": [
    "src/application/contracts"
  ],
  "maven": {
    "dependencies": [
      "software.amazon.smithy.typescript:smithy-aws-typescript-codegen:0.26.0",
      "software.amazon.smithy:smithy-aws-apigateway-openapi:1.58.0",
      "software.amazon.smithy:smithy-aws-traits:1.58.0",
      "software.amazon.smithy:smithy-cli:1.58.0",
      "software.amazon.smithy:smithy-model:1.58.0",
      "software.amazon.smithy:smithy-openapi:1.58.0",
      "software.amazon.smithy:smithy-validation-model:1.58.0"
    ]
  },
  "outputDirectory": "output",
  "projections": {
    "open-api-terraform": {
      "transforms": [
        {
          "name": "includeServices",
          "args": {
            "services": [
              "uk.co.samplecompany#CustomerRegistryApi"
            ]
          }
        }
      ],
      "plugins": {
        "openapi": {
          "service": "uk.co.samplecompany#CustomerRegistryApi",
          "apiGatewayDefaults": "2023-08-11",
          "protocol": "aws.protocols#restJson1",
          "disableCloudFormationSubstitution": true,
          "version": "3.0.2"
        }
      }
    }
  }
}